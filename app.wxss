/**app.wxss**/
::-webkit-scrollbar{
   display:none; 
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  opacity: 0.1;
}

.forecast_items{
  width: 50%;
  padding: 0 10rpx;
  display: inline-block;
  box-sizing: border-box;
}
.forecast_items_date{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: center;
}
.forecast_items_temp{
  color: #929292;
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.forecast_table{
  display: flex;
  font-size: 22rpx; 
}
.forecast_table .list_table{
  flex: 1;
  text-align: center;
  font-size: 22rpx;
}
.forecast_table .list_table.list_table_t{
  margin-left: 4rpx;
}

.grid{
