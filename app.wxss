.list_table .wind_arrow{
  width: 80%;
  height: 30rpx;
  transform: rotate(0deg)
}
.mychart-dom{
  width: 100%;
  height: 100%;
}


.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(66,66,66,0.8);
  top: 0;
  left: 0;
}
.enlarge{
  width: 80%;
  min-height: 74%;
  position: absolute;
  left: 10%;
  top: 13%;
  padding: 20rpx 10rpx;
  border-radius: 20rpx; 
  background-color: #e4e1eb;
  transform: scale(0.01);
}
.close{
  width: 80rpx;
  height: 110rpx;
  opacity: 0.5;
  position: absolute;
  top: -110rpx;
  right: 0;
}
.closeicon{
  width: 80rpx;
  height: 80rpx;
  vertical-align: top;
}
.closeline{
  height: 30rpx;
  width: 4rpx;
  margin: 0 auto;
  background-color: #b6b6b6;
}

