/**index.wxss**/
page{
  background-color: #e4ecf1;
}
.header{
  height: 220rpx;
}
.header_title {
  height: 140rpx;
  line-height: 140rpx;
  font-size: 70rpx;
  color:#fff;
  text-align: center;
  display: flex;
}
.header_title_aqi{
  width: 160rpx;
}
.header_title_text{
  font-weight:bold; 
  flex:1;
  line-height:100rpx
}
.header_title_temp{
  padding: 20rpx 0;
  box-sizing: border-box;
}
.temp{
  height: 50rpx;
  line-height: 50rpx;
  text-align: right;
  color: #ffffff;
  font-size: 26rpx; 
}
.weather{
  width: 100rpx;
  height: 140rpx;
  padding: 30rpx 10rpx;
  box-sizing: border-box;
}
.weather .weather_img{
  width:80rpx; 
  height:80rpx;
  display:block;
}

.update{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  text-align: center;
  background-color: #746d68;
  opacity: 0.5;
  border-bottom: 2rpx #5c5c5c solid;
  color:#fff;
}

.scroll_area{
  width: 100%;
  background-color: #ffffff;
  padding-top: 10rpx;
}
.scroll_view_item{
  display: inline-block;
  width: 140rpx;
  padding: 16rpx;
  box-sizing: border-box;
}
.days_week{
  width: 120rpx;
  height: 80rpx;
  position: relative;
}
.days_week .days_week_bg{
  width: 100%;
  height: 100%;
}
.days_week .week{
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx; 
}
.days_temp{
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  color: #838383;
  font-size: 20rpx;
}

.chart_area{
  display: flex;
}
.charts_left{
  width: 80rpx;
  text-align: right;
  padding-right: 10rpx;
  box-sizing: border-box;
  font-size: 22rpx;
}
.charts_left_hour{
  margin-top: 60rpx;
}

.charts_right{
  flex: 1;
}
.sunrise{
  height:40rpx;
  line-height:40rpx;
  text-align:center;
  font-size:22rpx;
}
.bottom{
  width: 100%;
  padding-left: 80rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}
.forecast_table_img{
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
  display: block;
}

.body{
  width: 100%;
  height: 100%;
  position: position;
}
.phase{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%; 
  margin:10rpx auto 0 auto;
}
.canvas{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%; 
  overflow:hidden;
}
              
